@model Calpion.Artemis.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<h3 style="margin-left:43%;padding-top:50px;font-family:Algerian; font-size:40px;"><b>A</b>rtemis</h3>
@using (Html.BeginForm("DoLogin","Login"))
{
    @Html.AntiForgeryToken()
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <div style="margin-left:30%;margin-top:5%;border-radius:10px;border:1px solid #808080;margin-right:32%;background-color:lightslategrey;">
        @*<h3 style="margin-left:42%">Sign In</h3>*@
        <i class="fa fa-user-circle-o" style="font-size:70px;margin-left:40%;padding-top:30px;"></i>
        <div class="container">
            <div class="row">
                <div class="Absolute-Center is-Responsive">
                    <div id="logo-container"></div>
                    <div class="col-sm-15 col-md-10 col-md-offset-1">
                        <div class="form-group">
                            <div class="input-group" style="margin-left:30%;margin-top:10%;width:250px;">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                                </div>
                                @Html.TextBoxFor(model => model.loginview.UserName, new { @class = "form-control", @placeholder = "Username" })
                            </div>
                            <small>@Html.ValidationMessageFor(model => model.loginview.UserName, "", new { @class = "text-danger" })</small>
                        </div>
                        <div class="form-group">
                            <div class="input-group" style="margin-left:30%;width:250px;">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
                                </div>
                                @Html.TextBoxFor(model => model.loginview.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                            </div>
                            <small>@Html.ValidationMessageFor(model => model.loginview.Password, "", new { @class = "text-danger" })</small>
                            <small style="color:darkred;">@ViewBag.ErroeMessage</small>
                        </div>
                        <div class="checkbox" style="margin-left:30%">
                            @Html.CheckBoxFor(model => model.loginview.Remember)
                            @Html.LabelFor(model => model.loginview.Remember, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark" style="width:150px;margin-left:53%;border-radius:30px;">Login</button>
                        </div>
                        <div class="form-group text-left">
                            <a href="#" data-toggle="modal" data-target="#Modalpopup">Forgot Password</a><br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@using (Html.BeginForm("SendEmail", "Login", FormMethod.Post, new { id = "UserAddForm" }))
{
    <div class="modal fade" id="Modalpopup" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered " role="document">
            <div class="modal-content ">
                <div style="margin-left: auto; margin-right: auto; text-align: center;" class="modal-header">
                    <h3 class="modal-title" id="exampleModalCenterTitle">Forgot Password</h3>
                </div>
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="row">
                                    @Html.Label("", "User Name", new { @class = "control-label col-sm-3" })
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(m => Model.forgotview.UserName, new { @class = "form-control required" })
                                        <small>@Html.ValidationMessageFor(model => Model.forgotview.UserName, "", new { @class = "text-danger" })</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="text-center">
                        <a href="~/Login/Login" class="btn btn-secondary">Close</a>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}